<!DOCTYPE html>
<html>
  <head>
    <title>CrookedDees</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <nav>
      <ul>
        <li>
          <%= link_to 'Home', root_path %>
        </li>

        <% if logged_in? %>
          <li>
            <%= link_to 'My Appointment', appointments_path %>
          </li>
          <!-- we only want to show this link if the user is logged in -->
            <% if current_user.is_admin? %>
              <li>
                <%= link_to 'Admin', admin_appointments_path %>
              </li>
            <% end %>
          <li>
            <%= link_to 'Log Out', session_path(current_user), method: :delete  %>
          </li>
      <% else %>
      <!-- else we want to show the sign up and login  -->
          <li>
            <%= link_to 'Sign Up', new_user_path %>
          </li>
          <li>
            <%= link_to 'Log In', new_session_path %>
          </li>
        <% end %>
      </ul>
    </nav>

  <body>
    <%= yield %>
  </body>
</html>
